@page
@model WebApp_UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mt-3 row">
                <div class="col-2">
                       <label  asp-for="Credentials.UserName"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="Credentials.UserName" class="form-control" />
                    <span asp-validation-for="Credentials.UserName" class="text-danger"></span>
                </div>
        </div>
        <div class="mt-3 row mb-3">
            <div class="col-2">
                <label asp-for="Credentials.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials.Password" class="form-control" />

                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3 row mb-3">
            <div class="col-2">
                    <input type="checkbox" class="form-check-inline" asp-for="Credentials.IsRemember" />
                    <label asp-for="Credentials.IsRemember" class="form-check-label"></label>
            </div>
            <div class="col-5">
               
            </div>
        </div>

        <div class="mt-3 row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>